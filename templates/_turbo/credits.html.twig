<turbo-frame id="credits-frame">
    <div class="mt-8">
        <h2 class="text-2xl font-bold text-white mb-6 flex items-center">
            <span class="w-1 h-8 bg-yellow-500 mr-3 rounded-full"></span>
            {{ 'credits.top_billed_cast'|trans }}
        </h2>

        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-4 xl:grid-cols-5 gap-4">
            {% for actor in credits.cast|slice(0, 5) %}
                <div class="flex flex-col items-center text-center group">
                    <div
                        class="w-32 h-32 md:w-40 md:h-40 mb-3 overflow-hidden rounded-full border-2 border-gray-800 shadow-xl transition-transform group-hover:scale-105 group-hover:border-yellow-500 duration-300">
                        {% if actor.profilePath %}
                            <img src="https://image.tmdb.org/t/p/w185{{ actor.profilePath }}"
                                 alt="{{ actor.name }}"
                                 class="w-full h-full object-cover"
                                 loading="lazy">
                        {% else %}
                            <div class="w-full h-full flex items-center justify-center text-gray-600">
                                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                          d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                        {% endif %}
                    </div>
                    <div class="p-3">
                        <p class="text-white font-semibold truncate text-sm md:text-base">{{ actor.name }}</p>
                        <p class="text-gray-400 text-xs md:text-sm truncate">{{ actor.character }}</p>
                    </div>
                </div>
            {% else %}
                <p class="text-gray-500 italic">{{ 'credits.no_cast'|trans }}</p>
            {% endfor %}
        </div>
    </div>
</turbo-frame>
