{% extends 'base.html.twig' %}

{% block title %}{{ movie.title }} ({{ movie.releaseDate ? movie.releaseDate|date('Y') : 'TBA' }}){% endblock %}

{% set meta_title = movie.title %}
{% set meta_description = movie.overview %}
{% set meta_image = movie.posterPath %}

{% block movie_backdrop %}
    {% if movie.backdropPath %}
        <img src="https://image.tmdb.org/t/p/original{{ movie.backdropPath }}" data-controller="image-loader"
             data-action="load->image-loader#reveal"
             class="fixed inset-0 top-0 left-0 w-full h-full object-cover z-[-1] pointer-events-none opacity-20"
             alt="">
    {% endif %}
{% endblock %}

{% block body %}

    <div class="flex justify-center mb-3 pb-2 gap-5">
        <button
            data-controller="share"
            data-share-title-value="Check out {{ movie.title }}"
            data-share-url-value="{{ url('app_movie', {id: movie.id, slug: movie.slug}) }}"
            data-action="click->share#share"
            class="flex justify-center"
        >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                 stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                 class="icon icon-tabler icons-tabler-outline icon-tabler-share me-2">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M3 12a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"/>
                <path d="M15 6a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"/>
                <path d="M15 18a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"/>
                <path d="M8.7 10.7l6.6 -3.4"/>
                <path d="M8.7 13.3l6.6 3.4"/>
            </svg>
            {{ 'action.share'|trans }}
        </button>

        <button
            onclick="history.back()"
            class="flex cursor-pointer"
        >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                 stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                 class="icon icon-tabler icons-tabler-outline icon-tabler-arrow-back-up me-2">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M9 14l-4 -4l4 -4"/>
                <path d="M5 10h11a4 4 0 1 1 0 8h-1"/>
            </svg>
            {{ 'navigation.back'|trans }}
        </button>
    </div>
    <div class="bg-gradient-to-b from-black/40 to-transparent rounded-lg p-5">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 md:gap-10 p-2">
            <div class="col-span-1">

                <div
                    class="rounded border-[2px] border-gray-500/20 overflow-hidden shadow-md shadow-gray-950/3 max-w-[400px]">
                    <img src="https://image.tmdb.org/t/p/w500{{ movie.posterPath }}" alt=""
                         class="w-full  hover:scale-105 transition duration-300 ease-in-out">
                </div>

            </div>

            <div class="col-span-2">
                <div class="mt-6 md:mt-0">
                    <h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold text-white mb-3">
                        {{ movie.title }}
                        {% if movie.releaseDate %}
                            <span class="font-thin text-gray-400">({{ movie.releaseDate|date('Y') }})</span>
                        {% endif %}
                    </h1>
                    {% if movie.originalTitle and movie.originalTitle != movie.title %}
                        <div class="text-gray-500 text-xl mb-4">
                            {{ movie.originalTitle }}
                        </div>
                    {% endif %}

                    {% if movie.tagline %}
                        <p class="text-xl italic text-gray-300 mb-4">{{ movie.tagline }}</p>
                    {% endif %}

                    <div class="flex flex-wrap gap-4 mb-4 text-md items-start">

                        {% if movie.status is same as 'Released' and movie.imdbId is not null and movie.voteAverage != 0 %}
                            <turbo-frame id="imdb-id" src="{{ path('app_imdb', {'id': movie.imdbId}) }}">
                                <div
                                    class="flex items-center bg-yellow-500 text-black font-bold px-3 py-1 rounded-full opacity-5 blur-[2px] ease-in-out">
                                    IMDb:
                                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path
                                            d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                    </svg>
                                    0.0
                                </div>
                            </turbo-frame>
                        {% endif %}

                        {% if movie.voteAverage > 0 %}
                            <div class="flex flex-col items-center">
                                <div
                                    class="flex items-center bg-blue-700 text-white font-bold px-3 py-1 rounded-full">
                                    TMDb:
                                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path
                                            d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                    </svg>
                                    {{ movie.voteAverage|number_format(1) }}
                                </div>
                                <div class="mt-1">
                                    {{ movie.voteCount }} {{ 'rating.votes'|trans }}
                                </div>
                            </div>
                        {% endif %}

                        {% if movie.runtime > 0 %}
                            <span class="text-gray-200">{{ movie.runtime }} {{ 'movie.length_minutes'|trans }}</span>
                        {% endif %}
                    </div>

                    <div class="mb-4">
                        <div class="flex gap-2 flex-wrap">
                            {% for genre in movie.genres %}
                                <span
                                    class="bg-gray-800 text-gray-300 px-2 py-1 rounded text-md border border-gray-700 text-nowrap">
                                        {{ ('genre.' ~ genre|lower|replace({' ': '_'}))|trans }}
                                    </span>
                            {% endfor %}
                        </div>
                    </div>

                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-white mb-6 flex items-center">
                            <span class="w-1 h-8 bg-yellow-500 mr-3 rounded-full"></span>
                            {{ 'movie.overview'|trans }}
                        </h2>
                        <p class="text-gray-300 leading-relaxed text-lg">
                            {{ movie.overview }}
                        </p>
                    </div>

                    <turbo-frame id="credits-frame" src="{{ path('app_credits', {'id': movie.id}) }}">
                        {{ 'turbo.loading'|trans }}
                    </turbo-frame>

                    <div class="grid grid-cols-2 sm:grid-cols-5 gap-6 py-6 border-t border-gray-800">
                        <div>
                            <span
                                class="block text-gray-500 text-sm uppercase font-bold">{{ 'movie.status'|trans }}</span>
                            <span class="text-white">{{ movie.status }}</span>
                        </div>
                        <div>
                            <span
                                class="block text-gray-500 text-sm uppercase font-bold">{{ 'movie.release_date'|trans }}</span>
                            <span class="text-white">{{ movie.releaseDate|date('Y-m-d') }}</span>
                        </div>
                        <div>
                            <span
                                class="block text-gray-500 text-sm uppercase font-bold">{{ 'movie.language'|trans }}</span>
                            <span class="text-white uppercase">{{ movie.originalLanguage }}</span>
                        </div>
                        <div>
                            <span
                                class="block text-gray-500 text-sm uppercase font-bold">{{ 'movie.budget'|trans }}</span>
                            <span
                                class="text-white">{{ movie.budget > 0 ? '$' ~ movie.budget|number_format : '-' }}</span>
                        </div>
                        <div>
                            <span
                                class="block text-gray-500 text-sm uppercase font-bold">{{ 'movie.revenue'|trans }}</span>
                            <span
                                class="text-white">{{ movie.revenue > 0 ? '$' ~ movie.revenue|number_format : '-' }}</span>
                        </div>
                    </div>

                    {% if movie.homepage %}
                        <div class="mt-4">
                            <a href="{{ movie.homepage }}" target="_blank"
                               class="inline-flex items-center text-yellow-500 hover:text-yellow-400 transition-colors">
                                {{ 'movie.homepage'|trans }}
                                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                </svg>
                            </a>
                        </div>
                    {% endif %}
                </div>
                <div class="mt-3">
                    <button
                        onclick="history.back()"
                        class="flex cursor-pointer text-white rounded bg-pink-800 px-3 py-1"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                             stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                             class="icon icon-tabler icons-tabler-outline icon-tabler-arrow-back-up me-2">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <path d="M9 14l-4 -4l4 -4"/>
                            <path d="M5 10h11a4 4 0 1 1 0 8h-1"/>
                        </svg>
                        {{ 'navigation.back'|trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
