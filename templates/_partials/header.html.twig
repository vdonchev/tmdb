<header class="text-fg-pink text-2xl flex flex-col items-center justify-center py-3 cursor-default select-none">

    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
         stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
         class="icon icon-tabler icons-tabler-outline icon-tabler-movie
             w-20 h-20 rotate-[11deg] hover:animate-spin">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"/>
        <path d="M8 4l0 16"/>
        <path d="M16 4l0 16"/>
        <path d="M4 8l4 0"/>
        <path d="M4 16l4 0"/>
        <path d="M4 12l16 0"/>
        <path d="M16 8l4 0"/>
        <path d="M16 16l4 0"/>
    </svg>

    <div>tv<span class="dark:text-gray-500">.donchev.be</span></div>

    <div class="flex justify-center my-2 text-[1.1rem] flex-wrap">

        <a href="{{ path('app_home', {'list': 'upcoming' ,'page':  1 }) }}"
           class="hover:underline dark:text-pink-500">
            <div class="flex">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                     class="icon icon-tabler icons-tabler-outline icon-tabler-device-tv me-2">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M3 7m0 2a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v9a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2z"/>
                    <path d="M16 3l-4 4l-4 -4"/>
                </svg>

                {{ 'menu.upcoming'|trans }}
            </div>
        </a>

        <a href="{{ path('app_home', {'list': 'trending', 'page': 1 }) }}"
           class="ml-5 hover:underline">
            <div class="flex">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                     class="icon icon-tabler icons-tabler-outline icon-tabler-trending-up me-2">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M3 17l6 -6l4 4l8 -8"/>
                    <path d="M14 7l7 0l0 7"/>
                </svg>
                {{ 'menu.trending'|trans }}
            </div>
        </a>

        <a href="{{ path('app_search_index') }}"
           class="ml-5 hover:underline">
            <div class="flex">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                     class="icon icon-tabler icons-tabler-outline icon-tabler-search me-2">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M3 10a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"/>
                    <path d="M21 21l-6 -6"/>
                </svg>
                {{ 'menu.search'|trans }}
            </div>
        </a>
    </div>
</header>
