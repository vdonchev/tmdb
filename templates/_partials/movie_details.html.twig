{# title #}
<h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold text-white mb-4 text-center sm:text-left">
    {{ movie.title }}
    {% if movie.releaseDate %}
        <span class="font-thin text-gray-400">({{ movie.releaseDate|date('Y') }})</span>
    {% endif %}
</h1>

{# original title #}
<div class="text-center sm:text-left">
    {% if movie.originalTitle and movie.originalTitle != movie.title %}
        <div class="text-gray-500 text-xl mb-4">
            {{ movie.originalTitle }}
        </div>
    {% endif %}

    {# plot #}
    {% if movie.tagline %}
        <p class="text-xl italic text-gray-300 mb-4">{{ movie.tagline }}</p>
    {% endif %}
</div>

<div class="flex flex-wrap gap-4 mb-4 text-md justify-center sm:justify-start align-center">

    {# IMDb rating #}
    {% if movie.status is same as 'Released' and movie.imdbId %}
        <a href="https://www.imdb.com/title/{{ movie.imdbId }}" target="_blank">
            <div>
                <div class="font-bold text-[.9rem] text-center">IMDb RATING</div>
                <div class="flex justify-center">
                    <div class="flex flex-col justify-center">
                        <svg class="text-amber-400 w-11 h-11 mr-1"
                             fill="currentColor" viewBox="0 0 20 20">
                            <path
                                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                        </svg>
                    </div>
                    <div>
                        <div class="text-[1.15rem]">
                            <div class="flex">
                                <div class="font-bold text-white"
                                       id="imdb-rating-{{ imdb_location|default('mobile') }}">0.0</div>
                                <div>/10</div>
                            </div>
                        </div>
                        <div class="text-sm">
                            <span id="imdb-votes-{{ imdb_location|default('mobile') }}">&nbsp;</span>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    {% endif %}

    {# TMDb rating #}
    {% if movie.voteAverage > 0 %}
        <a href="https://www.themoviedb.org/movie/{{ movie.id }}" target="_blank">
            <div>
                <div class="font-bold text-[.9rem] text-center">TMDb RATING</div>
                <div class="flex justify-center">
                    <div class="flex flex-col justify-center">
                        <svg class="text-blue-600 w-11 h-11 mr-1"
                             fill="currentColor" viewBox="0 0 20 20">
                            <path
                                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                        </svg>
                    </div>
                    <div>
                        <div class="text-[1.15rem]">
                            <div><span class="font-bold text-white">{{ movie.voteAverage|number_format(1) }}</span>/10
                            </div>
                        </div>
                        <div class="text-sm">
                            {{ movie.voteCount|shorten }}
                        </div>
                    </div>
                </div>
            </div>
        </a>
    {% endif %}


    {# runtime #}
    {% if movie.runtime > 0 %}
        <div
            class="text-gray-200 flex items-center text-l font-bold">{{ movie.runtime }} {{ 'movie.length_minutes'|trans }}</div>
    {% endif %}
</div>

{# genres #}
<div class="mb-3">
    <div class="flex gap-2 flex-wrap justify-center sm:justify-start">
        {% for genre in movie.genres %}
            <span
                class="bg-gray-800 text-gray-300 px-2 py-1 rounded text-md border border-gray-700 text-nowrap">
                                        {{ ('genre.' ~ genre|lower|replace({' ': '_'}))|trans }}
                                    </span>
        {% endfor %}
    </div>
</div>
